<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rg_main"
        android:layout_alignParentTop="true"
        />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/rg_main"
        android:layout_gravity="bottom"
        android:background="#BBBBBB" />

    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:background="#F7F7F7"
        android:orientation="horizontal"
        android:paddingTop="7dp">

        <RadioButton
            android:id="@+id/rb_video"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:checked="true"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/rb_video"
            android:gravity="center"
            android:text="影视"
            android:textColor="@color/main_tab_text_selector_tab"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/rb_baoyou"
            android:gravity="center"
            android:text="9.9包邮"
            android:textColor="@color/main_tab_text_selector_tab"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_mall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/rb_mall"
            android:gravity="center"
            android:text="商城"
            android:textColor="@color/main_tab_text_selector_tab"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_coupon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:background="@android:color/transparent"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/rb_search"
            android:gravity="center"
            android:text="超级搜"
            android:textColor="@color/main_tab_text_selector_tab"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_my"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/rb_my"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/main_tab_text_selector_tab"
            android:textSize="10sp" />
    </RadioGroup>

</RelativeLayout>